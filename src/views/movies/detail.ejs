<!-- Botón de volver con flecha -->
<button
  onclick="window.location.href='/movies'"
  class="btn btn-secondary mb-4 d-flex justify-content-center align-items-center"
>
  <span class="material-icons me-2">arrow_back</span> Volver
</button>
<h1 class="mb-4 text-center"><%= movie.titulo %></h1>

<div class="text-center mb-4">
  <img
    src="<%= movie.poster %>"
    alt="Poster de <%= movie.titulo %>"
    class="img-fluid"
    style="max-width: auto; height: 20rem"
  />
</div>

<p><strong>Categoría:</strong> <span><%= movie.categoria %></span></p>
<p><strong>Géneros:</strong> <span><%= movie.genero %></span></p>
<p><strong>Resumen:</strong> <span><%= movie.resumen %></span></p>
<p><strong>Temporadas:</strong> <span><%= movie.temporadas %></span></p>
<p><strong>Reparto:</strong> <span><%= movie.reparto %></span></p>

<% if (movie.trailer && movie.trailer !== 'N/A') { %>
<p>
  <strong>Trailer:</strong>
  <a href="<%= movie.trailer %>" target="_blank" class="btn btn-primary btn-sm"
    >Ver trailer</a
  >
</p>
<% } %>
