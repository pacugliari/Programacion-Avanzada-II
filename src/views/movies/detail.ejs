<div class="flex-column bg-white card p-2 top-0 col-12 col-md-6">
  <!-- Header sticky -->
  <div
    class="sticky-top bg-white d-flex align-items-center p-2 border-bottom"
    style="z-index: 1030"
  >
    <button
      onclick="window.location.href='/movies'"
      class="btn btn-secondary me-3 d-flex align-items-center"
    >
      <span class="material-icons">arrow_back</span>
    </button>
    <h1 class="h4 m-0">Detalle Película</h1>
  </div>

  <!-- Título -->
  <h2 class="text-center mt-4"><%= movie.titulo %></h2>

  <!-- Poster -->
  <div class="text-center mb-4">
    <img
      src="<%= movie.poster %>"
      alt="Poster de <%= movie.titulo %>"
      class="img-fluid rounded shadow"
      style="height: auto; max-height: 20rem"
    />
  </div>

  <!-- Info -->
  <div class="row justify-content-center">
    <div class="col-12">
      <p><strong>Categoría:</strong> <%= movie.categoria[0].descripcion %></p>

      <p>
        <strong>Géneros:</strong>
        <% movie.generos.forEach(function(genero, index) { %> <%=
        genero.descripcion %><%= index < movie.generos.length - 1 ? ', ' : '' %>
        <% }); %>
      </p>

      <p><strong>Resumen:</strong> <%= movie.resumen %></p>
      <p><strong>Temporadas:</strong> <%= movie.temporadas %></p>

      <p>
        <strong>Reparto:</strong>
        <% movie.reparto.forEach(function(actor, index) { %> <%= actor.nombre
        %><%= index < movie.reparto.length - 1 ? ', ' : '' %> <% }); %>
      </p>

      <% if (movie.trailer && movie.trailer !== 'N/A') { %>
      <p>
        <strong>Trailer:</strong>
        <a
          href="<%= movie.trailer %>"
          target="_blank"
          class="btn btn-primary btn-sm"
        >
          Ver trailer
        </a>
      </p>
      <% } %>
    </div>
  </div>
</div>
