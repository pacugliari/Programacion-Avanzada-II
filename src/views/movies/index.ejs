<div class="flex-column bg-white card p-2">
  <div class="mb-4 p-2 sticky-top bg-white" style="z-index: 1000">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-12 col-md-6 mb-2 mb-md-0">
          <h1 class="mb-0">Películas</h1>
        </div>
        <div
          class="col-12 col-md-6 d-flex flex-wrap justify-content-md-end gap-2"
        >
          <% if (user && user.role === 'admin') { %>
          <button
            id="btnBlock"
            class="btn btn-primary d-flex align-items-center"
            disabled
          >
            <span class="material-icons me-1">lock</span>
            <span class="d-none d-md-inline">Bloquear</span>
          </button>
          <% } %>
          <button
            id="btnCreate"
            class="btn btn-success d-flex align-items-center"
          >
            <span class="material-icons me-1">add</span>
            <span class="d-none d-md-inline">Crear</span>
          </button>
          <button
            id="btnModify"
            class="btn btn-warning d-flex align-items-center"
            disabled
          >
            <span class="material-icons me-1">edit</span>
            <span class="d-none d-md-inline">Modificar</span>
          </button>
          <button
            id="btnDelete"
            class="btn btn-danger d-flex align-items-center"
            disabled
          >
            <span class="material-icons me-1">delete</span>
            <span class="d-none d-md-inline">Eliminar</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div
    class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 me-2 ms-2"
  >
    <% movies.forEach(movie => { %>
    <div class="col">
      <div
        class="card h-100 shadow-sm movie-card"
        data-movie-id="<%= movie.id %>"
        data-blocked="<%= movie.blocked %>"
      >
        <span href="/movies/<%= movie.id %>">
          <div
            class="card-img-container"
            style="height: 300px; overflow: hidden"
          >
            <img
              src="<%= movie.poster %>"
              class="card-img-top"
              alt="<%= movie.titulo %>"
              style="width: 100%; height: 100%; object-fit: contain"
            />
          </div>
        </span>
        <div class="card-body">
          <h5
            class="card-title text-center d-flex justify-content-center align-items-center gap-2"
          >
            <span class="text-dark"><%= movie.titulo %></span>
            <% if (movie.blocked) { %>
            <span class="material-icons text-danger" title="Película bloqueada"
              >lock</span
            >
            <% } %>
          </h5>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<script>
  const flashMessages = {
    successMessage: <%- JSON.stringify(typeof successMessage !== 'undefined' ? successMessage : null) %>,
    errorMessage: <%- JSON.stringify(typeof errorMessage !== 'undefined' ? errorMessage : null) %>,
    errorCode: <%- JSON.stringify(typeof errorCode !== 'undefined' ? errorCode : null) %>
  };
</script>
<script type="module" src="/js/index.js"></script>
