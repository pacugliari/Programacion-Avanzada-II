<div class="container d-flex align-items-center justify-content-center">
  <div
    class="login-container bg-dark text-white p-4 rounded shadow"
    style="max-width: 50%; width: 100%"
  >
    <h3 class="text-center mb-4">Iniciar Sesión</h3>
    <form action="/auth/login" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Correo electrónico</label>
        <input
          type="email"
          class="form-control bg-light text-dark border-0"
          id="email"
          name="email"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Contraseña</label>
        <input
          type="password"
          class="form-control bg-light text-dark border-0"
          id="password"
          name="password"
          required
        />
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-outline-light">Entrar</button>
      </div>
    </form>
    <div class="text-center mt-3">
      <small>
        <a href="/auth/register" class="text-light text-decoration-none">
          ¿No tenés cuenta? Registrate
        </a>
      </small>
    </div>
  </div>
</div>

<script>
  const flashMessages = {
    successMessage: <%- JSON.stringify(typeof successMessage !== 'undefined' ? successMessage : null) %>,
    errorMessage: <%- JSON.stringify(typeof errorMessage !== 'undefined' ? errorMessage : null) %>,
    errorCode: <%- JSON.stringify(typeof errorCode !== 'undefined' ? errorCode : null) %>
  };
</script>
<script type="module" src="/js/auth.js"></script>
